# FlyEase Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Required Variables
# ===================

# PostgreSQL connection string
# For local: postgresql+asyncpg://user:password@localhost:5432/flyease
# For Heroku/Railway: The provider will set this automatically
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/flyease

# JWT signing secret - generate a secure random string
# Example: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# ===================
# Optional Variables
# ===================

# CORS origins (comma-separated)
# Default: http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","https://flyease-fe.netlify.app"]

# Database SSL (set to false for local development)
SSL_REQUIRED=false

# Enable demo mode (returns stub data when API keys missing)
DEMO_MODE=false

# ===================
# External API Keys
# ===================
# Leave empty to enable demo mode with stub data

# SkyScanner/RapidAPI key for flight search
BOOKING_API_KEY=

# Google Places API key for hotel search
GOOGLE_API_KEY=

# AviationStack API key for flight tracking
FLIGHTS_API_KEY=
